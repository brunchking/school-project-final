    <!--My CSS-->
    <style>
        .head {
            font-family: 'Amiko', sans-serif;
            background-color: #E0E2DB;
        }

        .con {
            color: black;
            font-size: 70px;
        }

        label {
            font-size: 30px;
            color: black;
        }

        .con {}
    </style>
</head>

<body>
    <div class="page">
        <!--animated nav-->
        <%- include('partials/nav') %>

        <div class="section">
            <!--content-->
            <div class="container-fluid content animated bounceInDown">
                <div class="row text-center">
                    <div class="col-12 col">
                        <h1 class="con">Contact us now!   <i class="fas fa-envelope"></i> </h1>
                    </div>
                </div>
            </div>
            <br>
            <!--form-->
            <div class="container form-1 animated bounceInDown">
                <form action="https://formspree.io/francis545@yahoo.com.tw" method="POST">
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-4">
                            <label>NAME</label>
                            <input type="text" class="form-control" placeholder="Name" name="name">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">EMAIL</label>
                            <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-8">
                            <label for="exampleFormControlTextarea1">MESSAGE</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                placeholder="Message" name="message"></textarea>
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        <button type="submit" class="btn btn-dark">Send</button>
                    </div>
                </form>
            </div>
            <!--social media-->
            <div class="text-center middle">
                <a class="btn1 bg-light" href="https://www.facebook.com/">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="btn1 bg-light" href="https://www.twitter.com/">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="btn1 bg-light" href="https://www.instagram.com/">
                    <i class="fab fa-instagram"></i>
                </a>
                <a class="btn1 bg-light" href="https://www.youtube.com/">
                    <i class="fab fa-youtube"></i>
                </a>
            </div>
        </div>

        <!--footer-->
        <% include partials/footer %>
        </>

        <!--myJavaScript-->
        <script src="../js/navNoEffect.js"></script>
</body>

</html>